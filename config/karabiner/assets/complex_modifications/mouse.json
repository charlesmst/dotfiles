
{
  "title": "Mouse Helper",
  "url": "https://github.com/charlesmst/dotfiles",
  "version": "1.0.0",
  "maintainers": [
    "Charles"
  ],
  "author": "Charles(charles.mst@gmail.com)",
  "website": "http://localhost",
  "json_url": "https://localhost/mouse.json",
  "import_url": "karabiner://karabiner/assets/complex_modifications/import?url=https://localhost/mouse.json",
  "gallery_url": "https://ke-complex-modifications.pqrs.org/#emulation-modes",
  "repo": "https://github.com/charlesmst/dotfiles",
  "rules": [
    {
      "description": "Mouse Mover",
      "manipulators": [
        {
          "description": "mission control or move1",
          "type": "basic",
          "from": {
            "pointing_button": "button7"
          },
          "to": [
            {
              "key_code": "right_shift",
              "modifiers": [
                "right_command",
                "right_control",
                "right_option"
              ]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "mission_control"
            }
          ]
        },

	{
          "description": "w = button7 + button4",
          "type": "basic",
          "from": {
            "pointing_button": "button4",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "a",
              "modifiers": [
                "left_option",
                "left_shift"
              ]
            }
          ]
        },

	{
          "description": "w = button7 + button5",
          "type": "basic",
          "from": {
            "pointing_button": "button5",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "d",
              "modifiers": [
                "left_option",
                "left_shift"
              ]
            }
          ]
        },

	{
          "description": "middle button 6",
          "type": "basic",
          "from": {
            "pointing_button": "button6"
          },
          "conditions": [
            {
                "name": "enable_mouse_motion_to_scroll",
                "type": "variable_unless",
                "value": 1
            }
          ],
          "to": [
            {
                "set_variable": {
                    "name": "enable_mouse_motion_to_scroll",
                    "value": 1
                }
            }
          ]
        },

	{
          "description": "middle button forward",
          "type": "basic",
          "from": {
            "pointing_button": "button5"
          },
          "to_if_alone": [
            {
              "pointing_button": "button5"
            }
          ],
          "to": [
            {
                "set_variable": {
                    "name": "enable_mouse_motion_to_scroll",
                    "value": 1
                }
            }
          ],
          "to_after_key_up": [
                {
                  "set_variable": {
                      "name": "enable_mouse_motion_to_scroll",
                      "value": 0
                  }
                }
           ]
        },
	{
          "description": "middle button rb 6",
          "type": "basic",
          "from": {
            "pointing_button": "button6"
          },
          "conditions": [
            {
                "name": "enable_mouse_motion_to_scroll",
                "type": "variable_unless",
                "value": 0
            }
          ],
          "to": [
            {
                "set_variable": {
                    "name": "enable_mouse_motion_to_scroll",
                    "value": 0
                }
            }
          ]
        },
	{
          "description": "middle button",
          "type": "basic",
          "from": {
            "pointing_button": "button8"
          },
          "conditions": [
            {
                "name": "enable_mouse_motion_to_scroll",
                "type": "variable_unless",
                "value": 1
            }
          ],
          "to": [
            {
                "set_variable": {
                    "name": "enable_mouse_motion_to_scroll",
                    "value": 1
                }
            }
          ]
        },

	{
          "description": "middle button rb",
          "type": "basic",
          "from": {
            "pointing_button": "button8"
          },
          "conditions": [
            {
                "name": "enable_mouse_motion_to_scroll",
                "type": "variable_unless",
                "value": 0
            }
          ],
          "to": [
            {
                "set_variable": {
                    "name": "enable_mouse_motion_to_scroll",
                    "value": 0
                }
            }
          ]
        },
        {
            "type": "mouse_motion_to_scroll",
            "from": {
                "modifiers": {
                    "optional": ["any"]
                }
            },
            "conditions": [
                {
                    "type": "variable_if",
                    "name": "enable_mouse_motion_to_scroll",
                    "value": 1
                }
            ]
        }
      ]
    }
  ]
}
